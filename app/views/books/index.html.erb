<h1 class="page-title">Books</h1>

<ul>
  <% @books.each do |book| %>
    <li>
      <p style="color:red"><%= book.title %></p>
      <p class="description"><%= book.description %></p>
      <%=  button_to '削除', delete_book_path(book), method: :delete %>
    </li>
  <% end %>
</ul>

<%= stylesheet_link_tag '/books/index' %>
